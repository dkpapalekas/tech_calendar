{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "init:server": "bash infrastructure/init.sh",
        "make:deb": "bash infrastructure/make-deb.sh",
        "deploy": "bash infrastructure/deploy.sh",
        "docker": "docker-compose --project-name tech_calendar_dev up --build",
        "start": "npm run start:frontend & npm run start:backend",
        "start:frontend": "parcel --dist-dir=./public --no-source-maps resources/index.html",
        "start:backend": "sleep 3 ; php81 artisan serve --host 0.0.0.0"
    },
    "devDependencies": {
        "@popperjs/core": "^2.10.2",
        "axios": "^0.21.4",
        "bootstrap": "^5.1.3",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "parcel": "^2.7.0",
        "postcss": "^8.1.14",
        "resolve-url-loader": "^3.1.2",
        "sass": "^1.32.11",
        "sass-loader": "^11.0.1",
        "vue": "^2.6.14",
        "vue-loader": "^15.9.8",
        "vue-template-compiler": "^2.6.14"
    },
    "dependencies": {
        "bootstrap-vue": "^2.22.0",
        "sweetalert2": "^11.4.17",
        "vue-axios": "^3.4.1",
        "vue-router": "^3.5.4"
    }
}
